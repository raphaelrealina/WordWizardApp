<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/assylumfont"
        android:text="Version: DEMO "
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="191dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/assylumfont"
        android:onClick="launchMain2"
        android:text="Back"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/assylumfont"
        android:text="LEVEL : 2"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.994"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ShopButton"
        android:layout_width="184dp"
        android:layout_height="68dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/assylumfont"
        android:onClick="launchShop"
        android:text="Shop"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/levelSelectText"
        android:layout_width="448dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/assylumfont"
        android:text="Level Select"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="184dp"
        android:layout_height="68dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="398dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/assylumfont"
        android:onClick="launchGame2"

        android:text="Start!"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ShopButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/level1Button"
        android:layout_width="120dp"
        android:layout_height="96dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/level5Button"
        app:layout_constraintTop_toBottomOf="@+id/levelSelectText"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageButton
        android:id="@+id/level3Button"
        android:layout_width="120dp"
        android:layout_height="96dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="332dp"
        android:onClick="notUnlocked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelSelectText"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageButton
        android:id="@+id/level4Button"
        android:layout_width="120dp"
        android:layout_height="96dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:onClick="notUnlocked"
        app:layout_constraintEnd_toStartOf="@+id/level3Button"
        app:layout_constraintTop_toBottomOf="@+id/levelSelectText"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageButton
        android:id="@+id/level5Button"
        android:layout_width="120dp"
        android:layout_height="96dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:onClick="notUnlocked"
        app:layout_constraintEnd_toStartOf="@+id/level4Button"
        app:layout_constraintTop_toBottomOf="@+id/levelSelectText"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="96dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/level1Button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelSelectText"
        app:srcCompat="@android:drawable/checkbox_on_background" />

</androidx.constraintlayout.widget.ConstraintLayout>